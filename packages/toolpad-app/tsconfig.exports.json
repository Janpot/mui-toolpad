{
  "compilerOptions": {
    "incremental": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist/exports",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["./src/runtime/**/*", "./src/canvas/**/*", "typings/**/*"]
}
