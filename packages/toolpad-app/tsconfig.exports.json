{
  "compilerOptions": {
    "jsx": "react",
    "incremental": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "module": "esnext",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist/exports",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["./src/runtime/**/*", "./src/canvas/**/*", "typings/**/*.d.ts"]
}
